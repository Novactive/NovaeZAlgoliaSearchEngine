<phpunit colors="true" stopOnFailure="false" backupGlobals="false" bootstrap="./bootstrap.php">
    <testsuites>
        <testsuite name="Algolia Bundle">
            <directory>./Unit</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./</directory>
            <exclude>
                <directory>./Unit</directory>
            </exclude>
        </whitelist>
    </filter>
    <php>
        <env name="APP_ENV" value="test" force="true"/>
        <env name="KERNEL_CLASS" value="App\Kernel"/>
        <env name="UNIT_TESTS" value="true"/>
        <env name="SYMFONY_DEPRECATIONS_HELPER" value="verbose=0"/>
    </php>
</phpunit>